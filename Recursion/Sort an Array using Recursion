//Question : https://leetcode.com/problems/sort-an-array/
//This will give a time limit exceeded for larger inputs thus merge / quick sort is better
class Solution {
public:
    void insert(vector<int>&nums,int last_el){
        int n=nums.size();
        if(n==0 || nums[n-1]<=last_el){
            nums.push_back(last_el);
            return;
        }
        int temp=nums[n-1];
        nums.pop_back();
        insert(nums,last_el);
        nums.push_back(temp);return;
    }
    vector<int> sortArray(vector<int>& nums) {
        int n=nums.size();
        if(n==0 || n==1){
            return nums;
        }
        int  last_el=nums[n-1];
        nums.pop_back();
        sortArray(nums);
        insert(nums,last_el);
        return nums;
    }
};
