//https://www.geeksforgeeks.org/problems/tower-of-hanoi-1587115621/1
class Solution {
  public:
  int cnt=0;
    int towerOfHanoi(int n, int from, int to, int aux) {
       cnt++;
        // code here
        if(n==1){
            return 1;
        }
        towerOfHanoi(n-1,from,aux,to);
        towerOfHanoi(n-1,aux,to,from);
        return cnt;
    }
};
